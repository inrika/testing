<p id="notice"><%= notice %></p>

<p>
  <%= @question.title %>
</p>

<h2>Варианты ответов</h2>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>Текст ответа</th>
    <th colspan="3">Правильность</th>
  </tr>
  </thead>

  <tbody>

  <% @question.answers.each do |answer| %>
      <tr>
        <td><%= answer.text %></td>
        <td><%= answer.is_correct %></td>

        <td><%= link_to 'Show', [:admin,@online_test, answer.question, answer ] %></td>
        <td><%= link_to 'Edit', edit_admin_online_test_question_answer_path(@online_test,@question, answer) %></td>
        <td><%= link_to 'Destroy', [:admin, @online_test,  answer.question, answer],
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<h2>Добавить ответы:</h2>
<%= form_for([:admin, @online_test, @question, @question.answers.build]) do |f| %>
    <p>
      <%= f.label :text %><br>
      <%= f.text_field :text %>
    </p>
    <p>
      <%= f.label :is_correct %>
      <%= f.check_box :is_correct %>
    </p>


    <p>
      <%= f.submit %>
    </p>
<% end %>



<%= link_to 'Back', admin_online_tests_path %>
