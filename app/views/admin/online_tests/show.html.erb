<p id="notice"><%= notice %></p>

<h2>
  <strong>Тест:</strong>
  <%= @online_test.title %>
</h2>


<h3>Вопросы</h3>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>Текст</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @online_test.questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= link_to 'Show', [:admin,question.online_test, question] %></td>
        <td><%= link_to 'Edit', "#" %></td>
        <td><%= link_to 'Destroy', [:admin,question.online_test, question],
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<div class="panel panel-default">
	  <div class="panel-heading">Добавить вопросы:</div>
	  <div class="panel-body">
      <%= form_for([:admin, @online_test, @online_test.questions.build], html:{class:"form-inline"}) do |f| %>
          <div class="form-group">
            <%= f.label :title, "Текст" , class:"sr-only" %>
            <%= f.text_field :title, class:"form-control", placeholder:"Текст вопроса" %>
          </div>
          <%= f.submit "Добавить",  class:"btn " %>
      <% end %>
	  </div>
</div>


<%= link_to 'Edit', edit_admin_online_test_path(@online_test) %> |
<%= link_to 'Back', admin_online_tests_path %>
