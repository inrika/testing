<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @online_test.title %>
</p>


<h2>Вопросы</h2>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @online_test.questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= link_to 'Show', [:admin,question.online_test, question] %></td>
        <td><%= link_to 'Edit', "#" %></td>
        <td><%= link_to 'Destroy', [:admin,question.online_test, question],
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<h2>Добавить вопросы:</h2>
<%= form_for([:admin, @online_test, @online_test.questions.build]) do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>


<%= link_to 'Edit', edit_admin_online_test_path(@online_test) %> |
<%= link_to 'Back', admin_online_tests_path %>
